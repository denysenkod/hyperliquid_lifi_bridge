{
  "name": "hyperliquid-deposit",
  "version": "1.0.0",
  "description": "One-click deposit to HyperLiquid trading account from any chain. Automatically bridges tokens to Arbitrum USDC and deposits to HyperLiquid.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev:example": "cd example && bun run dev",
    "build:example": "cd example && bun run build",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "hyperliquid",
    "deposit",
    "bridge",
    "lifi",
    "arbitrum",
    "usdc",
    "react",
    "react-component",
    "crypto",
    "web3",
    "defi",
    "trading"
  ],
  "author": "Aspect Build",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aspect-build/hyperliquid-deposit"
  },
  "homepage": "https://github.com/aspect-build/hyperliquid-deposit#readme",
  "bugs": {
    "url": "https://github.com/aspect-build/hyperliquid-deposit/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@lifi/sdk": "^3.5.0",
    "ethers": "^5.7.0 || ^6.0.0",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
